<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66cccc"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/grey_shadow_bg"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_shadow_bg"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true" />

                <ImageView
                    android:id="@+id/plus_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/plus_icon" />

                <ImageView
                    android:id="@+id/plus_attachTop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_menu_attach"
                    />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cv_top"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/unselected_fav" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/fav"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/grey_shadow_bg"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_shadow_bg"
            android:orientation="horizontal"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" />

                <ImageView
                    android:id="@+id/plus_bottom"
                    android:layout_width="27dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus_icon" />

                <ImageView
                    android:id="@+id/plus_attachBottom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_menu_attach" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>